<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Failed</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        overflow-x: hidden;
      }
      .order-failed-container {
        max-width: 500px;
        padding: 20px 15px;
        width: 100%;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      /* Failure Animation */
      .failure-animation {
        text-align: center;
        margin-bottom: 15px;
      }
      .failure-animation .cross-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 3px solid #dc3545;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto 8px;
        animation: scaleIn 0.5s ease-in-out;
        background-color: #fff;
      }
      .failure-animation .cross {
        width: 35px;
        height: 35px;
        position: relative;
        animation: drawCross 0.5s ease-in-out 0.5s forwards;
        opacity: 0;
      }
      .failure-animation .cross::before,
      .failure-animation .cross::after {
        content: "";
        position: absolute;
        background: #dc3545;
        width: 5px;
        height: 35px;
        top: 0;
        left: 15px;
      }
      .failure-animation .cross::before {
        transform: rotate(45deg);
      }
      .failure-animation .cross::after {
        transform: rotate(-45deg);
      }
      @keyframes scaleIn {
        0% {
          transform: scale(0);
        }
        100% {
          transform: scale(1);
        }
      }
      @keyframes drawCross {
        0% {
          opacity: 0;
          transform: scale(0);
        }
        100% {
          opacity: 1;
          transform: scale(1);
        }
      }
      /* Order Failed Heading */
      .order-failed-header {
        font-size: 2.2rem;
        color: #4a2c0f;
        text-align: center;
        margin-bottom: 15px;
        font-weight: 600;
        letter-spacing: 0.5px;
        animation: fadeIn 1s ease-in-out;
      }
      /* Section Styling */
      .order-section {
        width: 100%;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 15px;
        margin-bottom: 15px;
        animation: fadeInUp 1s ease-in-out;
      }
      .section-title {
        font-size: 1.3rem;
        color: #333;
        font-weight: 600;
        margin-bottom: 10px;
      }
      .order-section p {
        margin-bottom: 8px;
        color: #555;
        font-size: 1rem;
        line-height: 1.4;
      }
      .order-section p strong {
        color: #212529;
        font-weight: 600;
      }
      /* Button Styling */
      .btn-danger,
      .btn-secondary {
        padding: 10px;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.3s ease;
        text-align: center;
        text-decoration: none;
        width: 100%;
      }
      .btn-danger:hover,
      .btn-secondary:hover {
        transform: scale(1.03);
      }
      /* Animations */
      @keyframes fadeIn {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }
      @keyframes fadeInUp {
        0% {
          opacity: 0;
          transform: translateY(15px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }
      /* Responsive Design */
      @media (max-width: 767px) {
        .order-failed-container {
          padding: 15px 10px;
        }
        .order-failed-header {
          font-size: 1.8rem;
        }
        .order-section {
          padding: 12px;
        }
        .section-title {
          font-size: 1.2rem;
        }
        .order-section p {
          font-size: 0.95rem;
        }
        .failure-animation .cross-circle {
          width: 55px;
          height: 55px;
        }
        .failure-animation .cross {
          width: 28px;
          height: 28px;
        }
        .failure-animation .cross::before,
        .failure-animation .cross::after {
          width: 4px;
          height: 28px;
          left: 12px;
        }
      }
    </style>
  </head>
  <body>
    <div class="order-failed-container">
      <!-- Failure Animation -->
      <div class="failure-animation">
        <div class="cross-circle">
          <div class="cross"></div>
        </div>
        <h1 class="order-failed-header">ORDER FAILED</h1>
      </div>

      <!-- Failure Reason Section -->
      <div class="order-section">
        <h4 class="section-title">Reason for Failure</h4>
        <p>
          <strong>Error:</strong> Payment processing failed due to insufficient
          funds.
        </p>
        <p><strong>Order ID:</strong> <%= order._id %></p>
        <p>
          <strong>Attempted Date:</strong> <%=
          order.createdOn.toISOString().slice(0, 10); %>
        </p>
      </div>

      <!-- Contact Support Section -->
      <div class="order-section">
        <h4 class="section-title">Need Help?</h4>
        <p>
          <strong>Contact Us:</strong> Please reach out to our support team at
          support@example.com or call us at +1-800-123-4567 for assistance.
        </p>
      </div>

      <!-- Buttons -->
      <div class="d-flex flex-column gap-2 mt-3 w-100">
        <button class="btn-retry btn btn-danger">Retry Payment</button>
        <a href="/userOrderDetailes/<%= order._id %>" class="btn btn-secondary"
          >See Order Detailes</a
        >
        <a href="/shop" class="btn btn-secondary">Continue Shopping</a>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      document
        .querySelector(".btn-retry")
        .addEventListener("click", async () => {
          const orderId = "<%= order._id %>";
          try {
            const result = await fetch("/retryPayment", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ orderId }),
            });

            const data = await result.json();

            if (data.success) {
              console.log(data.message || "retry payment successfully");
              window.location.href = data.redirectUrl;
            } else {
              Swal.fire({
                icon: "error",
                title: "Failed",
                text: data.message || "failed to retry payment",
              });
            }
          } catch (error) {
            Swal.fire({
              icon: "error",
              title: "Failed",
              text: error.message || "something went wrong",
            });
          }
        });
    </script>
  </body>
</html>
