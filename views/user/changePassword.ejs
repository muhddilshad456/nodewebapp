<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password - WatchSy</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- sweet alert css -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
      }
      .logo-container {
        text-align: center;
        margin-bottom: 2rem;
      }
      .logo {
        max-width: 200px;
      }
      .form-container {
        max-width: 400px;
        padding: 2rem;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .navbar {
        background-color: #fff;
        padding: 1rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      .navbar-nav .nav-link {
        color: #000;
        margin-right: 1rem;
      }
      .navbar-nav .nav-link:hover {
        color: #007bff;
      }
      .search-bar {
        max-width: 200px;
      }
      .btn-custom {
        background-color: #000;
        color: #fff;
      }
      .btn-custom:hover {
        background-color: #333;
        color: #fff;
      }
      .message {
        text-align: center;
        color: red;
      }
    </style>
  </head>
  <body>
    <!-- Main Content -->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-4">
          <div class="form-container">
            <h2 class="text-center mb-4">Enter your New Password</h2>
            <form onsubmit="sendData(event)">
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  name="currentPassword"
                  placeholder="Current Password"
                  id="currentPassword"
                />
              </div>
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  name="newPassword"
                  placeholder="New Password"
                  id="newPassword"
                />
              </div>
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  name="confirmPassword"
                  id="confirmPassword"
                  placeholder="Confirm Password"
                />
              </div>
              <div class="message" id="message"></div>
              <br />
              <button type="submit" class="btn btn-custom w-100">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add jQuery from a CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- sweet alert  -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      function sendData(e) {
        e.preventDefault();
        const currentPassword =
          document.getElementById("currentPassword").value;
        const newPassword = document.getElementById("newPassword").value;
        const confirmPassword =
          document.getElementById("confirmPassword").value;
        const message = document.getElementById("message");
        const alpha = /[a-zA-Z]/;
        const digits = /\d/;
        if (
          currentPassword.length < 8 ||
          newPassword.length < 8 ||
          confirmPassword.length < 8
        ) {
          message.style.display = "block";
          message.innerHTML = "password should contain 8 charecter";
          return;
        } else if (
          !alpha.test(currentPassword) ||
          !digits.test(currentPassword) ||
          !alpha.test(newPassword) ||
          !digits.test(newPassword) ||
          !alpha.test(confirmPassword) ||
          !digits.test(confirmPassword)
        ) {
          message.style.display = "block";
          message.innerHTML = "Should contain numbers and alphabets";
          return;
        } else {
          message.style.display = "none";
          message.innerHTML = "";
        }
        if (newPassword !== confirmPassword) {
          message.style.display = "block";
          message.innerHTML = "password not match";
          return;
        } else {
          message.style.display = "none";
          message.innerHTML = "";
        }

        $.ajax({
          type: "POST",
          url: "/changePassword",
          data: {
            currentPassword,
            newPassword,
            confirmPassword,
          },
          success: function (response) {
            if (response.success) {
              Swal.fire({
                icon: "success",
                title: "Password Changed Successfully",
                text: response.message,
                showConfirmButton: false,
                timer: 1500,
              }).then(() => {
                window.location.href = response.redirectUrl;
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "error",
                text: response.message,
              });
            }
          },
          error: function (error) {
            Swal.fire({
              icon: "error",
              title: "error",
              text: "An unexpected error occurred",
            });
          },
        });
      }
    </script>
  </body>
</html>
