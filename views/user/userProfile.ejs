<%- include("../../views/partials/user/profileHeader") %>
<!-- Profile Section -->
<!-- Profile Section -->
<div class="col-md-9">
  <!-- Name and Phone Section -->
  <div class="profile-section">
    <h2>Personal Info</h2>
    <div class="row">
      <div class="col-md-12">
        <div class="info-box">
          <strong>Name</strong>
          <%=user.name %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="info-box">
          <strong>Phone</strong>
          <%=user.phone %>
        </div>
      </div>
    </div>
    <% if(!user.googleId){ %>
    <a
      class="btn btn-dark"
      data-bs-toggle="modal"
      data-bs-target="#editPersonalInfoModal"
      data-name="<%= user.name %>"
      data-phone="<%= user.phone %>"
      data-id="<%= user._id %>"
      onclick="openPersonalInfoEditModal(this)"
      >Edit Personal Info</a
    >
    <% } %>
  </div>

  <!-- Email Section -->
  <div class="profile-section mt-4">
    <h2>Email Info</h2>
    <div class="row">
      <div class="col-md-12">
        <div class="info-box">
          <strong>Email</strong>
          <%=user.email %>
        </div>
      </div>
    </div>
    <% if(!user.googleId){ %>
    <a
      class="btn btn-dark"
      data-bs-toggle="modal"
      data-bs-target="#editEmailModal"
      data-email="<%= user.email %>"
      data-id="<%= user._id %>"
      onclick="openEmailEditModal(this)"
      >Edit Email</a
    >
    <% } %>
  </div>
</div>
<!-- edit personalInfo modal -->

<div
  class="modal fade"
  id="editPersonalInfoModal"
  tabindex="-1"
  aria-labelledby="editProfileLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-header">
        <h5 class="modal-title" id="editProfileLabel">Edit Profile</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <form action="/editPersonalInfo" method="POST">
        <div class="modal-body">
          <input type="hidden" id="editId" name="editId">
          <!-- Name -->
          <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input
              type="text"
              class="form-control"
              id="editName"
              name="name"
              placeholder="Your name"
              required
            />
          </div>

          <!-- Phone -->
          <div class="mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input
              type="tel"
              class="form-control"
              id="editPhone"
              name="phone"
              placeholder="+1234567890"
            />
          </div>
        </div>

        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-success">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- edit email modal -->

<div
  class="modal fade"
  id="editEmailModal"
  tabindex="-1"
  aria-labelledby="editProfileLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-header">
        <h5 class="modal-title" id="editProfileLabel">Edit Profile</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <form action="/editEmail" method="POST">
        <div class="modal-body">
          <input type="hidden" id="editEmailId" name="editEmailId">
          <!-- Email -->
          <div class="mb-3">
            <label for="name" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="editEmail"
              name="email"
              placeholder="Email Address"
              required
            />
          </div>

          

        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-success">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- edit personel info prefilling -->
<script>
  function openPersonalInfoEditModal(button) {
    const name = button.getAttribute("data-name");
    const phone = button.getAttribute("data-phone");
    const id = button.getAttribute("data-id");

    document.getElementById("editName").value = name;
    document.getElementById("editPhone").value = phone;
    document.getElementById("editId").value = id;
  }
</script>
<!-- edit email prefilling -->
<script>
  function openEmailEditModal(button) {
    const email = button.getAttribute("data-email");
    const emailId = button.getAttribute("data-id");

    document.getElementById("editEmail").value = email;
    document.getElementById("editEmailId").value = emailId;
  }
</script>
