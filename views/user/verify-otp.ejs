<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OTP Input Form</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .otp-container {
        max-width: 500px;
        border: 1px solid #0d6efd;
        border-radius: 8px;
        padding: 50px 20px;
        margin: 50px auto;
        text-align: center;
        background-color: white;
      }

      .timer {
        display: inline-block;
        margin: 15px 0;
        font-size: 14px;
      }

      .resend-link {
        color: #0d6efd;
        text-decoration: none;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="otp-container">
        <h5 class="mb-4">Please enter the otp in the mail:</h5>
        <form
          id="otpForm"
          action="/verify-otp"
          method="post"
          onsubmit="return validateOTPForm()"
        >
          <div class="row justify-content-center">
            <div class="col-12 col-md-8">
              <input
                type="text"
                class="form-control mb-3"
                aria-label="OTP input"
              />
            </div>
          </div>

          <div class="timer"><span id="timer">17</span> s</div>

          <div class="d-grid gap-2 col-8 mx-auto">
            <button class="btn btn-dark" type="button">Submit</button>
          </div>

          <div class="mt-3">
            Wrong Email? <span class="resend-link" id="resendLink">Resend</span>
          </div>
        </form>
      </div>
    </div>
    <!-- Add jQuery from a CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // Timer functionality
      let timeLeft = 17;
      const timerElement = document.getElementById("timer");
      const resendLink = document.getElementById("resendLink");

      // Start the timer
      const countdown = setInterval(function () {
        timeLeft--;
        timerElement.textContent = timeLeft;

        // When timer reaches zero
        if (timeLeft <= 0) {
          clearInterval(countdown);
          // Optional: Enable resend link when timer ends
          resendLink.style.pointerEvents = "auto";
          resendLink.style.opacity = "1";
        }
      }, 1000);

      // Resend link click handler
      resendLink.addEventListener("click", function () {
        // Reset timer
        timeLeft = 17;
        timerElement.textContent = timeLeft;

        // Restart countdown if it was stopped
        if (!countdown._idleNext) {
          setInterval(countdown, 1000);
        }

        // Here you would typically add code to resend the OTP
        console.log("Resending OTP...");
      });

      function validateOTPForm() {
        const otpInput = document.getElementById("otp").value;

        $.ajax({
          type: "POST",
          url: "verify-otp",
          data: { otp: otpInput },
          success: function (responce) {
            if (responce.success) {
              Swal.fire({
                icon: "success",
                title: "OTP Verified Successfully",
                showConfirmButton: false,
                timer: 1500,
              }).then(() => {
                window.location.href = responce.redirectUrl;
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: responce.message,
              });
            }
          },
          error: function () {
            Swal.fire({
              icon: "error",
              title: "Invalied OTP",
              text: "Please try again",
            });
          },
        });
        return false;
      }
    </script>
  </body>
</html>
