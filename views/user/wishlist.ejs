<%- include("../../views/partials/user/header") %>

<style>
  body {
    font-family: Arial, sans-serif;
  }
  /* Header Styles */
  .navbar {
    background-color: #fff;
    border-bottom: 1px solid #ddd;
    padding: 10px 0;
  }
  .navbar-brand img {
    width: 40px;
  }
  .navbar-nav {
    flex-direction: row;
  }
  .navbar-nav .nav-link {
    padding: 0 15px;
    color: #000;
  }
  .navbar-nav .nav-link.active {
    font-weight: bold;
  }
  .navbar-nav .nav-link.icon {
    padding: 0 10px;
  }
  /* Table Styles */
  .table thead {
    background-color: #000;
    color: #fff;
  }
  .table th,
  .table td {
    padding: 15px;
    vertical-align: middle;
  }
  .table img {
    width: 50px;
    height: auto;
  }
  .btn-add-to-cart {
    background-color: #000;
    color: #fff;
    border-radius: 20px;
    padding: 5px 15px;
  }
  /* Totals Section Styles */
  .totals-section {
    margin-top: 30px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }
  .totals-section h5 {
    font-weight: bold;
    margin-bottom: 20px;
  }
  .totals-section p {
    margin: 5px 0;
  }
  .totals-section .total {
    font-weight: bold;
    font-size: 1.2rem;
    margin-top: 10px;
  }
  .coupon-section {
    margin-top: 20px;
    display: flex;
    align-items: center;
  }
  .coupon-section input {
    flex-grow: 1;
    margin-right: 10px;
  }
  .coupon-section .btn {
    background-color: #007bff;
    color: #fff;
    border-radius: 20px;
  }
  /* Footer Styles */
  .footer {
    background-color: #000;
    color: #fff;
    padding: 30px 0;
    margin-top: 50px;
  }
  .footer h5 {
    font-weight: bold;
    margin-bottom: 15px;
  }
  .footer p {
    margin: 5px 0;
  }
  .footer a {
    color: #fff;
    text-decoration: none;
  }
  .footer a:hover {
    text-decoration: underline;
  }
  .footer .input-group .form-control {
    background-color: #333;
    border: none;
    color: #fff;
  }
  .footer .input-group .btn {
    background-color: #333;
    border: none;
    color: #fff;
  }
  .footer .social-icons a {
    color: #fff;
    margin-right: 10px;
    font-size: 1.2rem;
  }
</style>

<body>
  <!-- Wishlist Section -->
  <div class="container my-5">
    <h1 class="text-center mb-4">WISHLIST</h1>
    <% if (!wishlist || wishlist.products.length===0) { %>
    <h3
      class="text-center mb-4"
      style="color: red; padding: 80px 0; font-size: 2rem"
    >
      Wishlist is empty
    </h3>

    <% }else{ %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">IMAGE</th>
          <th scope="col">PRODUCT NAME</th>
          <th scope="col">PRICE</th>
          <th scope="col">ACTION</th>
        </tr>
      </thead>
      <tbody>
        <% wishlist.products.forEach(item=>{ %>
        <tr>
          <td>
            <img
              src="<%= item.productId.productImage[0] %>"
              alt="Kronos Analog Watch"
              class="me-3"
            />
          </td>
          <td>
            <span><%= item.productId.productName %></span>
          </td>
          <td>â‚¹<%= item.productId.productAmount %></td>
          <td>
            <button
              class="btn btn-add-to-cart"
              data-itemid="<%= item.productId._id %>"
            >
              Add to Cart
            </button>
            <button
              class="btn btn-danger btn-remove"
              data-itemid="<%= item.productId._id %>"
            >
              Remove
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  // add to cart
  document.querySelectorAll(".btn-add-to-cart")?.forEach((button) => {
    button.addEventListener("click", async () => {
      const productId = button.dataset.itemid;
      const quantity = 1;
      try {
        const result = await fetch("/addToCart", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ productId, quantity }),
        });

        const responce = await result.json();

        if (responce.success) {
          Swal.fire({
            icon: "success",
            title: "Success",
            text: responce.message || "Item added to cart successfully",
            showConfirmButton: false,
            timer: 1500,
          }).then(() => (window.location.href = "/cart"));
        } else {
          Swal.fire({
            icon: "error",
            title: "Failed",
            text: responce.message || "Failed to add to cart",
          });
        }
      } catch (error) {
        console.log(error);
        Swal.fire({
          icon: "error",
          title: "Failed",
          text: error.message || "Somethig went wrong",
        });
      }
    });
  });

  // remove from wishlist

  document.querySelectorAll(".btn-remove")?.forEach((button) => {
    button.addEventListener("click", async () => {
      const productId = button.dataset.itemid;
      try {
        const result = await fetch("/removeFromWishlist", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ productId }),
        });

        const responce = await result.json();

        if (responce.success) {
          Swal.fire({
            icon: "success",
            title: "Success",
            text: responce.message || "Item removed successfully",
            showConfirmButton: false,
            timer: 1500,
          }).then(() => (window.location.href = "/wishlist"));
        } else {
          Swal.fire({
            icon: "error",
            title: "Failed",
            text: responce.message || "Failed to remove",
          });
        }
      } catch (error) {
        console.log(error);
        Swal.fire({
          icon: "error",
          title: "Failed",
          text: error.message || "Somethig went wrong",
        });
      }
    });
  });
</script>
