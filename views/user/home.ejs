<%- include("../../views/partials/user/header") %>
<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h1 class="hero-title">LATEST<br />COLLECTIONS.</h1>
        <p class="mt-3 mb-4">
          Discover our finest selection of premium timepieces.
        </p>
        <a href="/shop" class="btn btn-dark px-4 py-2">SHOP NOW</a>
      </div>
      <div class="col-md-6">
        <img
          src="/Uploads/image1-1744780169776.jpg"
          alt="Watch Collection"
          class="img-fluid"
        />
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="feature-box">
          <div class="feature-icon">
            <i class="fas fa-shipping-fast"></i>
          </div>
          <h4>Free Shipping</h4>
          <p>
            Free standard shipping on all orders above $100. Express shipping
            for quick delivery.
          </p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box">
          <div class="feature-icon">
            <i class="fas fa-headset"></i>
          </div>
          <h4>Support 24/7</h4>
          <p>
            Our customer service team is available around the clock to assist
            you with your queries.
          </p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box">
          <div class="feature-icon">
            <i class="fas fa-lock"></i>
          </div>
          <h4>Secure Payments</h4>
          <p>
            Shop with confidence with our secure payment gateways and encrypted
            transactions.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Bestsellers Section -->
<section class="bestsellers-section">
  <div class="container">
    <h2 class="text-center mb-4">Our Bestsellers</h2>
    <p class="text-center mb-5">
      These are our most loved timepieces that define luxury, style and
      craftsmanship
    </p>

    <div class="row">
      <!-- Product  -->
      <% for (let i = 0; i < products.length; i++) { %>
      <div class="col-lg-3 col-md-4 col-6">
        <div class="product-card p-3">
          <a href="/productDetailes?id=<%=products[i].product._id %>">
            <img
              class="product-image"
              src="<%= products[i].product.productImage[0] %>"
              alt="<%=products[i].product.productName %>"
            />
          </a>
          <h5 class="product-title"><%=products[i].product.productName %></h5>
          <div class="ratings">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star-half-alt"></i>
          </div>
          <div
            class="product-price text-dark fw-bold"
            style="font-size: 1.2rem"
          >
            <% if(products[i].offerPrice){ %>
            <span class="ms-2"> ₹<%= products[i].offerPrice %> </span>
            <span
              style="
                font-size: 0.8rem;
                text-decoration: line-through;
                color: grey;
              "
            >
              ₹<%= products[i].product.productAmount %>
            </span>
            <% }else{ %> ₹<%= products[i].product.productAmount %> <% } %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>

<!-- Footer -->
<%- include("../../views/partials/user/footer") %>
