<%- include("../../views/partials/admin/header") %>

<!-- Content -->
<div class="content">
  <div
    class="d-flex justify-content-between align-items-center mb-4"
    style="padding-top: 20px"
  >
    <h2>Brand</h2>
    <div class="d-flex">
      <form action="/admin/brand" method="get">
        <div class="input-group me-2" style="width: 300px">
          <input
            type="text"
            class="form-control"
            name="search"
            id="searchInput"
            placeholder="Search for Products"
            aria-label="Search"
          />
          <button class="btn btn-dark" type="submit">
            <i class="bi bi-search"></i>
          </button>
          <button
            class="btn btn-outline-secondary"
            type="button"
            onclick="clearSearch()"
          >
            <i class="bi bi-x-lg"></i>
          </button>
        </div>
      </form>
      <button
        class="btn btn-success"
        data-bs-toggle="modal"
        data-bs-target="#addBrandModal"
      >
        ADD BRAND <i class="bi bi-plus-lg"></i>
      </button>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">NO</th>
          <th scope="col">BRAND</th>
          <th scope="col">BRAND DESCRIPTION</th>
          <th scope="col">LAST UPDATED</th>
          <th scope="col">STATUS</th>
          <th scope="col">ACTIONS</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < brand.length; i++) { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= brand[i].name %></td>
          <td><%= brand[i].description %></td>
          <td><%= brand[i].createdOn %></td>
          <td><%= brand[i].isListed %></td>
          <td>
            <div class="d-flex">
              <button
                class="btn btn-secondary"
                data-bs-toggle="modal"
                data-bs-target="#editBrandModal"
                data-name="<%= brand[i].name %>"
                data-description="<%= brand[i].description %>"
                data-id="<%= brand[i]._id %>"
                onclick="openEditModal(this)"
              >
                EDIT
              </button>
              <%if(!brand[i].isListed){%>
              <button class="btn btn-success">
                <a
                  href="/admin/blockBrand?id=<%=brand[i]._id%>"
                  class="text-white"
                  >UNBLOCK</a
                >
              </button>
              <%}else{%>
              <button class="btn btn-danger">
                <a
                  href="/admin/unblockBrand?id=<%=brand[i]._id%>"
                  class="text-white"
                  >BLOCK</a
                >
              </button>
              <%}%>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-between align-items-center mt-3">
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <% for(let i=1;i<=totalPages;i++){ %>
        <li class="page-item <%=(i===currentPage) ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"> <%= i %> </a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
</div>

<!-- Add Brand Modal -->
<div
  class="modal fade"
  id="addBrandModal"
  tabindex="-1"
  aria-labelledby="addBrandModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCategoryModalLabel">Add Brand</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="addBrandForm" onsubmit="handleFormSubmit(event)">
          <div class="mb-3">
            <label for="brandName" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              name="name"
              id="brandName"
              placeholder="Enter brand name"
            />
          </div>
          <div class="mb-3">
            <label for="brandDescription" class="form-label">Description</label>
            <textarea
              class="form-control"
              name="description"
              id="brandDescription"
              placeholder="Enter brand description"
              rows="3"
            ></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary" form="addBrandForm">
          Add Brand
        </button>
      </div>
    </div>
  </div>
</div>

<!-- edit category modal -->

<div
  class="modal fade"
  id="editBrandModal"
  tabindex="-1"
  aria-labelledby="addBrandModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addBrandModalLabel">Edit Brand</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="editBrandForm" onsubmit="handleEditFormSubmit(event)">
          <input type="hidden" id="editBrandId" name="editId" />
          <div class="mb-3">
            <label for="brandName" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="editBrandName"
              name="editName"
            />
          </div>
          <div class="mb-3">
            <label for="brandDescription" class="form-label">Description</label>
            <textarea
              class="form-control"
              id="editBrandDescription"
              name="editDescription"
              rows="3"
            ></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary" form="editBrandForm">
          Edit Brand
        </button>
      </div>
    </div>
  </div>
</div>

<!-- clear search input -->
<script>
  function clearSearch() {
    const searchInput = document.getElementById("searchInput");
    searchInput.value = "";
    window.location.href = "/admin/brand";
  }
</script>
<!-- add category validation -->
<script>
  function handleFormSubmit(event) {
    event.preventDefault();

    const brandName = document.getElementById("brandName").value.trim();
    const brandDescription = document
      .getElementById("brandDescription")
      .value.trim();

    if (!brandName) {
      alert("Name field cannot be empty");
      return;
    }
    if (!/^[a-zA-Z\s]+$/.test(brandName)) {
      alert("Name must contain only alphabets and spaces.");
      return;
    }

    if (!brandDescription) {
      alert("Description field cannot be empty.");
      return;
    }
    if (!/^[a-zA-Z\s]+$/.test(brandDescription)) {
      alert("Description must contain only alphabets and spaces.");
      return;
    }

    const formData = {
      name: brandName,
      description: brandDescription,
    };

    console.log(formData);

    fetch("/admin/addBrand", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(formData),
    })
      .then((response) => {
        if (!response.ok) {
          throw new Error("Network response was not ok");
        }
        return response.json();
      })
      .then((data) => {
        alert("Brand added successfully");
        const modal = bootstrap.Modal.getInstance(
          document.getElementById("addBrandModal")
        );
        modal.hide();
        location.reload();
      })
      .catch((error) => {
        alert("Error adding brand: " + error.message);
      });

    return false;
  }
</script>
<!-- edit modal validation -->
<script>
  function handleEditFormSubmit(event) {
    event.preventDefault();

    const editBrandName = document.getElementById("editBrandName").value.trim();
    const editBrandDescription = document
      .getElementById("editBrandDescription")
      .value.trim();
    const editBrandId = document.getElementById("editBrandId").value.trim();

    //pre filled name
    const originalName =
      document
        .getElementById("editBrandName")
        .getAttribute("data-original-name") || "";

    // Check if name is unchanged
    if (editBrandName === originalName) {
      alert("No changes made to the brand.");
      return;
    }

    if (!editBrandName) {
      alert("Name field cannot be empty");
      return;
    }
    if (!/^[a-zA-Z\s]+$/.test(editBrandName)) {
      alert("Name must contain only alphabets and spaces.");
      return;
    }

    if (!editBrandDescription) {
      alert("Description field cannot be empty.");
      return;
    }
    if (!/^[a-zA-Z\s]+$/.test(editBrandDescription)) {
      alert("Description must contain only alphabets and spaces.");
      return;
    }

    const data = {
      editName: editBrandName,
      editDescription: editBrandDescription,
      editId: editBrandId,
    };

    fetch("/admin/editBrand", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(data),
    })
      .then((response) => {
        if (!response.ok) {
          throw new Error("Network response was not ok");
        }
        return response.json();
      })
      .then((data) => {
        alert("Brand edited successfully");
        const modal = bootstrap.Modal.getInstance(
          document.getElementById("editBrandModal")
        );
        modal.hide();
        location.reload();
      })
      .catch((error) => {
        alert("Error editing brand: " + error.message);
      });
  }
</script>

<script>
  function openEditModal(button) {
    const name = button.getAttribute("data-name");
    const description = button.getAttribute("data-description");
    const id = button.getAttribute("data-id");

    document.getElementById("editBrandName").value = name;
    document.getElementById("editBrandDescription").value = description;
    document.getElementById("editBrandId").value = id;
  }
</script>
