<%- include("../../views/partials/admin/header") %>

<!-- Content -->
<div class="content">
  <div
    class="d-flex justify-content-between align-items-center mb-4"
    style="padding-top: 20px"
  >
    <h2>Category</h2>
    <div class="d-flex">
      <form action="/admin/category" method="get">
        <div class="input-group me-2" style="width: 300px">
          <input
            type="text"
            class="form-control"
            name="search"
            id="searchInput"
            placeholder="Search for Products"
            aria-label="Search"
          />
          <button class="btn btn-dark" type="submit">
            <i class="bi bi-search"></i>
          </button>
          <button
            class="btn btn-outline-secondary"
            type="button"
            onclick="clearSearch()"
          >
            <i class="bi bi-x-lg"></i>
          </button>
        </div>
      </form>
      <button
        class="btn btn-success"
        data-bs-toggle="modal"
        data-bs-target="#addCategoryModal"
      >
        ADD CATEGORY <i class="bi bi-plus-lg"></i>
      </button>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">NO</th>
          <th scope="col">CATEGORY</th>
          <th scope="col">CATEGORY DESCRIPTION</th>
          <th scope="col">LAST UPDATED</th>
          <th scope="col">STATUS</th>
          <th scope="col">ACTIONS</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < cat.length; i++) { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= cat[i].name %></td>
          <td><%= cat[i].description %></td>
          <td><%= cat[i].createdOn %></td>
          <td><%= cat[i].isListed %></td>
          <td>
            <div class="d-flex">
              <button
                class="btn btn-secondary"
                data-bs-toggle="modal"
                data-bs-target="#editCategoryModal"
                data-name="<%= cat[i].name %>"
                data-description="<%= cat[i].description %>"
                data-id="<%= cat[i]._id %>"
                onclick="openEditModal(this)"
              >
                EDIT
              </button>
              <%if(!cat[i].isListed){%>
              <button class="btn btn-success">
                <a
                  href="/admin/blockCategory?id=<%=cat[i]._id%>"
                  class="text-white"
                  >UNBLOCK</a
                >
              </button>
              <%}else{%>
              <button class="btn btn-danger">
                <a
                  href="/admin/unblockCategory?id=<%=cat[i]._id%>"
                  class="text-white"
                  >BLOCK</a
                >
              </button>
              <%}%>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-between align-items-center mt-3">
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <% for(let i=1;i<=totalPages;i++){ %>
        <li class="page-item <%=(i===currentPage) ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"> <%= i %> </a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
</div>

<!-- Add Category Modal -->
<div
  class="modal fade"
  id="addCategoryModal"
  tabindex="-1"
  aria-labelledby="addCategoryModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCategoryModalLabel">Add Category</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="addCategoryForm" onsubmit="handleFormSubmit(event)">
          <div class="mb-3">
            <label for="categoryName" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              name="name"
              id="categoryName"
              placeholder="Enter category name"
            />
          </div>
          <!-- <span
            id="NameErr"
            class="alert alert-danger text-center"
            style="display: none"
          ></span> -->
          <div class="mb-3">
            <label for="categoryDescription" class="form-label"
              >Description</label
            >
            <textarea
              class="form-control"
              name="description"
              id="categoryDescription"
              placeholder="Enter category description"
              rows="3"
            ></textarea>
            <span
              id="descriptionErr"
              class="alert alert-danger text-center"
              style="display: none"
            ></span>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary" form="addCategoryForm">
          Add Category
        </button>
      </div>
    </div>
  </div>
</div>

<!-- edit category modal -->

<div
  class="modal fade"
  id="editCategoryModal"
  tabindex="-1"
  aria-labelledby="addCategoryModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCategoryModalLabel">Edit Category</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="editCategoryForm" onsubmit="handleEditFormSubmit(event)">
          <input type="hidden" id="editCategoryId" name="editId" />
          <div class="mb-3">
            <label for="categoryName" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="editCategoryName"
              name="editName"
            />
          </div>
          <div class="mb-3">
            <label for="categoryDescription" class="form-label"
              >Description</label
            >
            <textarea
              class="form-control"
              id="editCategoryDescription"
              name="editDescription"
              rows="3"
            ></textarea>
            <span
              id="msgErr"
              class="alert alert-danger text-center"
              style="display: none"
            ></span>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary" form="editCategoryForm">
          Edit Category
        </button>
      </div>
    </div>
  </div>
</div>

<!-- clear search input -->
<script>
  function clearSearch() {
    const searchInput = document.getElementById("searchInput");
    searchInput.value = "";
    window.location.href = "/admin/category";
  }
</script>
<!-- add category validation -->
<script>
  function handleFormSubmit(event) {
    event.preventDefault();

    const categoryName = document.getElementById("categoryName").value.trim();
    const categoryDescription = document
      .getElementById("categoryDescription")
      .value.trim();
    const descriptionErr = document.getElementById("descriptionErr");

    if (!categoryName || !/^[a-zA-Z\s]+$/.test(categoryName)) {
      descriptionErr.style.display = "block";
      descriptionErr.style.background = "none";
      descriptionErr.style.border = 0;
      descriptionErr.style.color = "red";
      descriptionErr.innerHTML = "Enter valid name";
      return;
    } else {
      descriptionErr.style.display = "none";
      descriptionErr.innerHTML = "";
    }

    if (!categoryDescription || !/^[a-zA-Z\s]+$/.test(categoryDescription)) {
      descriptionErr.style.display = "block";
      descriptionErr.style.background = "none";
      descriptionErr.style.border = 0;
      descriptionErr.style.color = "red";
      descriptionErr.innerHTML = "Enter valid description";
      return;
    } else {
      descriptionErr.style.display = "none";
      descriptionErr.innerHTML = "";
    }

    const formData = {
      name: categoryName,
      description: categoryDescription,
    };

    console.log(formData);

    fetch("/admin/addCategory", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(formData),
    })
      .then((response) => {
        if (!response.ok) {
          throw new Error("Network response was not ok");
        }
        return response.json();
      })
      .then((data) => {
        alert("Category added successfully");
        const modal = bootstrap.Modal.getInstance(
          document.getElementById("addCategoryModal")
        );
        modal.hide();
        location.reload();
      })
      .catch((error) => {
        alert("Error adding category: " + error.message);
      });

    return false;
  }
</script>
