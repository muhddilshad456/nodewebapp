<%- include("../../views/partials/admin/header") %>

<!-- Content -->
<div class="content">
  <div
    class="d-flex justify-content-between align-items-center mb-4"
    style="padding-top: 20px"
  >
    <h2>Category</h2>
    <div class="d-flex">
      <div class="input-group me-2" style="width: 300px">
        <input
          type="text"
          class="form-control"
          placeholder="Search for Products"
          aria-label="Search"
        />
        <button class="btn btn-dark" type="button">
          <i class="bi bi-search"></i>
        </button>
      </div>
      <button
        class="btn btn-success"
        data-bs-toggle="modal"
        data-bs-target="#addCategoryModal"
      >
        ADD CATEGORY <i class="bi bi-plus-lg"></i>
      </button>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">NO</th>
          <th scope="col">CATEGORY</th>
          <th scope="col">CATEGORY DESCRIPTION</th>
          <th scope="col">LAST UPDATED</th>
          <th scope="col">STATUS</th>
          <th scope="col">ACTIONS</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < cat.length; i++) { %>
        <tr>
          <td><%= i %></td>
          <td><%= cat[i].name %></td>
          <td><%= cat[i].description %></td>
          <td><%= cat[i].createdOn %></td>
          <td><%= cat[i].isListed %></td>
          <td>
            <div class="d-flex">
              <a href="#" class="btn btn-sm btn-outline-light me-1"
                ><i class="bi bi-pencil"></i
              ></a>
              <a href="#" class="btn btn-sm btn-outline-light"
                ><i class="bi bi-trash"></i
              ></a>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-between align-items-center mt-3">
    <p class="text-muted">SHOWING 1 OF 10</p>
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">«</span>
          </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">4</a></li>
        <li class="page-item"><a class="page-link" href="#">5</a></li>
        <li class="page-item"><a class="page-link" href="#">6</a></li>
        <li class="page-item"><a class="page-link" href="#">7</a></li>
        <li class="page-item"><a class="page-link" href="#">8</a></li>
        <li class="page-item"><a class="page-link" href="#">9</a></li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">»</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<!-- Add Category Modal -->
<div
  class="modal fade"
  id="addCategoryModal"
  tabindex="-1"
  aria-labelledby="addCategoryModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCategoryModalLabel">Add Category</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form
          method="post"
          action="/admin/addCategory"
          id="addCategoryForm"
          onsubmit="return handleFormSubmit(event)"
        >
          <div class="mb-3">
            <label for="categoryName" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="categoryName"
              name="name"
              placeholder="Enter category name"
            />
          </div>
          <div class="mb-3">
            <label for="categoryDescription" class="form-label"
              >Description</label
            >
            <textarea
              class="form-control"
              id="categoryDescription"
              name="description"
              placeholder="Enter category description"
              rows="3"
            ></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary" form="addCategoryForm">
          Add Category
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function handleFormSubmit(event) {
    event.preventDefault();
    console.log("Form is valid and fetch is running");
    const categoryName = document.getElementById("categoryName");
    const categoryDescription = document.getElementById("categoryDescription");

    const nameValue = categoryName.value.trim();
    if (!nameValue) {
      alert("Name field cannot be empty");
      categoryName.focus();
      return false;
    }
    if (!/^[a-zA-Z\s]+$/.test(nameValue)) {
      alert("Name must contain only alphabets and spaces.");
      categoryName.focus();
      return false;
    }
    const descriptionValue = categoryDescription.value.trim();
    if (!descriptionValue) {
      alert("Description field cannot be empty.");
      categoryDescription.focus();
      return false;
    }
    if (!/^[a-zA-Z\s]+$/.test(descriptionValue)) {
      alert("Description must contain only alphabets and spaces.");
      categoryDescription.focus();
      return false;
    }

    // Fetch with corrected constructor
    const formData = new FormData(document.getElementById("addCategoryForm"));
    fetch("/admin/addCategory", {
      method: "POST",
      body: formData,
    })
      .then((response) => {
        if (!response.ok) {
          throw new Error("Network response was not ok");
        }
        return response.json();
      })
      .then((data) => {
        alert("Category added successfully");
        const modal = bootstrap.Modal.getInstance(
          document.getElementById("addCategoryModal")
        );
        modal.hide();
        location.reload();
      })
      .catch((error) => {
        alert("Error adding category: " + error.message);
      });

    return false;
  }
</script>

